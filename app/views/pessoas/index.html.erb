<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">  
  <h1 class="h2">Pessoas</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button class="btn btn-sm btn-outline-secondary">Share</button>
      <button class="btn btn-sm btn-outline-secondary">Export</button>
    </div>
    <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
      <span data-feather="calendar"></span>
      This week
    </button>
  </div>
</div>


<p id="notice"><%= notice %></p>

<%= link_to 'Exibir Crianças em Sala de Aula', eventos_path, class: 'btn btn-secondary btn-block' %>
<%= link_to 'Adicionar Família +', nova_familia_pessoas_path, class: 'btn btn-primary btn-block' %>


<br>


<table class='table table-bordered'>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <%- if (pessoa.grupo==1) then %>
          <td><h3><%= link_to pessoa.familia, pessoa_editar_familia_path(pessoa_id: pessoa) %></h3></td>
          <td width='10px'>
      		  <div class="dropdown">
      		    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
      		      Ações
      		    </button>
      		    <div class="dropdown-menu dropdown-menu-right">
                <%= link_to 'Adicionar Responsável', pessoa_novo_responsavel_path(pessoa_id: pessoa), class: 'dropdown-item' %>
                <%= link_to 'Adicionar Crianças', pessoa_nova_crianca_path(pessoa_id: pessoa), class: 'dropdown-item' %>
                <%= link_to 'Editar Família', pessoa_editar_familia_path(pessoa_id: pessoa), class: 'dropdown-item'  %>
                <%= link_to 'Fazer Checkin', checkin_path(pessoa_id: pessoa), class: 'dropdown-item' %>
                <%= link_to 'Fazer Checkout', checkout_path(pessoa_id: pessoa), class: 'dropdown-item' %>
      		    </div>
      		  </div>
         </td>
       <% end %>

        <%- if (pessoa.grupo==2) then %>
          <td colspan='2'><h6 style='padding-left: 20px;'><%= link_to pessoa.primeiro_nome, pessoa_editar_responsavel_path(pessoa_id: pessoa)  %> <spam class='tile-responsavel'>Responsável</spam></h6></td>
       <% end %>

        <%- if (pessoa.grupo==3) then %>
          <td><h6 style='padding-left: 20px;'><%= link_to pessoa.primeiro_nome, pessoa_editar_crianca_path(pessoa_id: pessoa)  %> <spam class='tile-crianca'><%= pessoa.sexo %> com <%= pessoa.idade %> anos</spam></h6></td>
          <td width='10px'>
            <%= link_to 'Histórico', historico_path(pessoa_id: pessoa), class: 'btn btn-success btn-sm' %>
          </td>          
       <% end %>       

      </tr>
    <% end %>
  </tbody>
</table>

